{
  "name": "test",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "front-office",
    "back-office",
    "backend",
    "content-generator"
  ],
  "scripts": {
    "start:dev": "npm -s run tools && npm -s run generate:content && npm run start:dev:all",
    "start:dev:all": "concurrently  -n \"BACKEND,FRONT-OFFICE,BACK-OFFICE\" -c \"red.bold,green.bold,yellow.bold\"  \"npm:start:dev:backend\" \"npm:start:dev:front-office\" \"npm:start:dev:back-office\"",
    "start:dev:backend": "yarn workspace backend start:dev",
    "start:dev:front-office": "wait-on http-get://localhost:3000 && yarn workspace front-office start:dev",
    "start:dev:back-office": "wait-on http-get://localhost:3000 && yarn workspace back-office dev",
    "generate:content": "yarn workspace content-generator start ",
    "tools": "node ./.lyttle_tools/src/app/core/app.js",
    "tools:version:update": "node ./.lyttle_tools/src/app/version-manager/version.js && chmod ug+x ./.git/hooks/*",
    "tools:breaking:accept": "node ./.lyttle_tools/src/app/breaking/accept.js",
    "heroku-postbuild": "npm -s run generate:content && yarn workspace backend build"
  },
  "dependencies": {
    "concurrently": "^7.4.0"
  },
  "devDependencies": {
    "wait-on": "^6.0.1"
  }
}
